 <% if logged_in? %> 
  <%= form_for Favorite.new, :url => favorites_create_path do |f|%>
    <%= f.hidden_field (location.class.to_s.scan(/[A-Z][a-z]+/).join("_").downcase+"_id").to_sym, value:location.id %>
    <%= f.hidden_field :user_id, value:current_user.id %>
    <%= f.submit "Add to Favorites" %>
  <% end %>
<% end %>