<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3">
    <h2><%= link_to "Home", root_path %> | <%= link_to 'Back', :back %></h2>
  </div>
  

      <% if logged_in? %>
        <div class="col-md-4"><center>
          <h3>Logged in as: <%= link_to current_user.name, user_path(current_user) %></h3>
        </center></div>
        <div class="col-md-3"><center>
          <h3><%= link_to 'Log Out', logout_path %></h3>
        </center></div>
      <% else %>
        <div class="col-md-7">
          <center>
            <h3><%= link_to 'Log In with Github', login_path %></h3>
          </center>
        </div>
      <% end %>


  <div class="col-md-1"></div>
</div>